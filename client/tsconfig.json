{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "allowJs": false,
        "declaration": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "lib": [ "es2015", "dom" ],
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}

